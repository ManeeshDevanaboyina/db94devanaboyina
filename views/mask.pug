extends layout

block content
  h1= title
  p Welcome to the mask pug
  div(class="container-fluid")
        div(class="row")
            -
                let mask = results
            each v,index in mask
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.size}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }