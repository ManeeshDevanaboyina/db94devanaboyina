extends layout

block content
 h1= title
 - let mask = results;
 div(class="container-fluid")
  div(class="row m-1")
   each item in mask
      - let destination = `dispatch(\"/mask/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.color}(#{item.price}) is #{item.size}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      
 script.
  function dispatch(path){
    window.location.href=path
  }